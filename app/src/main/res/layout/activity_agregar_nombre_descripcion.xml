<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F56A0D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva Receta"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />

        <!-- CardView para contenedor blanco redondeado -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F4F4F4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="560dp"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Subtítulo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Háblanos sobre tu receta"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Nombre de la receta -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Introduce el nombre de tu receta"
                    android:textColor="#666666" />

                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Ej. Tacos de atún"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textColorHint="#999999" />

                <!-- Descripción -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Describe tu receta"
                    android:textColor="#666666" />

                <EditText
                    android:id="@+id/etDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="261dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/rounded_edittext"
                    android:gravity="top|start"
                    android:hint="Hablanos sobre tu receta..."
                    android:inputType="textMultiLine"
                    android:padding="12dp"
                    android:textColor="#000000"
                    android:textColorHint="#999999" />

                <!-- Botón continuar -->
                <Button
                    android:id="@+id/btnContinuar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_brown"
                    android:padding="12dp"
                    android:text="Continuar"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
