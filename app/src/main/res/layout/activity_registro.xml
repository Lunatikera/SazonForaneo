<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F4ED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/sazon_logo"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear cuenta"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#5D2A1C"
            android:layout_marginBottom="24dp" />

        <!-- Campo reutilizable -->
        <EditText
            android:id="@+id/etNombre"
            style="@style/StyledEditText"
            android:hint="Nombre completo" />


        <EditText
            android:id="@+id/etCorreo"
            style="@style/StyledEditText"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etFecha"
            style="@style/StyledEditText"
            android:hint="Fecha de nacimiento"
            android:focusable="false"
            android:clickable="true" />

        <Spinner
            android:id="@+id/spinnerGenero"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etPassword"
            style="@style/StyledEditText"
            android:hint="Contraseña"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/etConfirmar"
            style="@style/StyledEditText"
            android:hint="Confirmar contraseña"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnContinuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear cuenta"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E28532"
            android:elevation="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvIniciarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Ya tienes una cuenta? Inicia sesión"
            android:textColor="#E28532"
            android:textSize="14sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>
</ScrollView>
